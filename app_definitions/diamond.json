{
	"dockerimage" : "skyport/diamond:latest",
	"commands" : {
		"search" : {
			"blastx" : {
				"input" : [
						   {
						   "type"	: "file",
						   "name"	: "query"
						   },
						   {
						   "type"	: "file",
						   "name"	: "dbfile",
						   "cache" : true,
						   "description" : "filename must have suffix .dmnd !"
						   }
						   ],
				"cmd_script" :
					[
					"mkdir -p /workdir/tmp/",
					"diamond blastx --tmpdir=/workdir/tmp/ -d ${remove_extension:${dbfile}} -q ${query} -o ${remove_extension:${query}}.diamond --threads ${NumCPU} --block-size=2"
					],
				"outputs" : [
					{
					"name" : "result",
					"filename" : "${remove_extension:${query}}.diamond"
					}
				]
			}
		},
		"makedb" : {
			"default" : {
				"input" : [
						   {
						   "type"	: "file",
						   "name"	: "INPUT"
						   }
				],
				"cmd_script" :
					[
					"diamond makedb --in ${INPUT} --db ${remove_extension:${INPUT}} --threads ${NumCPU}"
					],
				"outputs" : [
					{
							 "name" : "diamond-db",
							 "filename" : "${remove_extension:${INPUT}}.dmnd"
					}
				]
			}
		}
	}
}