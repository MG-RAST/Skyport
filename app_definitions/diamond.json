{
	"dockerimage" : "skyport/diamond:latest",
	"commands" : {
		"search" : {
			"blastx" : {
				"input" : [
						   {
						   "type"	: "file",
						   "name"	: "query"
						   },
						   {
						   "type"	: "file",
						   "name"	: "dbfile",
						   "cache" : true,
						   "description" : "filename must have suffix .dmnd !"
						   },
						   {
						   "type"	: "string",
						   "name"	: "job_id"
						   }
						   ],
				"cmd_script" :
				[
				 "diamond blastx -d ${remove_extension:dbfile} -q ${query} -o ${job_id}.diamond --threads ${NumCPU}"
				 ],
				"outputs" : [
					{
					"name" : "result",
					"filename" : "${job_id}.diamond"
					}
				]
			}
		}
		
	}
}